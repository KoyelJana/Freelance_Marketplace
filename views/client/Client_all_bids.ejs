<!DOCTYPE html>
<html lang="en">

<%- include('./layouts/header') %>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include('./layouts/sidebar') %>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <%- include('./layouts/topbar') %>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-4 text-gray-800">All Bids</h1>

                    <!-- Flash Message -->
                    <% if (message && message.length > 0) { %>
                        <div class="alert alert-info"><%= message %></div>
                    <% } %>

                    <!-- ================= PENDING BIDS ================= -->
                    <h3 class="text-warning mb-3">Pending Bids</h3>
                    <table class="table table-bordered">
                        <thead class="thead-light">
                            <tr>
                                <th>Bid ID</th>
                                <th>Job ID</th>
                                <th>Freelancer Name</th>
                                <th>Amount</th>
                                <th>Delivery Days</th>
                                <th>Status</th>
                                <th>Created At</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% pendingBids.forEach(bid => { %>
                                <tr>
                                    <td><%= bid._id %></td>
                                    <td><%= bid.jobId %></td>
                                    <td><%= bid.freelancerName %></td>
                                    <td><%= bid.amount %></td>
                                    <td><%= bid.deliveryDays %></td>
                                    <td><span class="badge bg-warning text-dark"><%= bid.status %></span></td>
                                    <td><%= bid.createdAt.toLocaleString() %></td>
                                    <td>
                                        <div style="display:flex; gap:10px;">
                                            <form action="/client/bids/accept/<%= bid._id %>" method="POST" style="display:inline;">
                                                <button class="btn btn-success btn-sm">Accept</button>
                                            </form>
                                            <form action="/client/bids/reject/<%= bid._id %>" method="POST" style="display:inline;">
                                                <button class="btn btn-danger btn-sm">Reject</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>

                    <!-- ================= ACCEPTED BIDS ================= -->
                    <h3 class="text-success mt-5 mb-3">Accepted Bids</h3>
                    <table class="table table-bordered">
                        <thead class="thead-light">
                            <tr>
                                <th>Bid ID</th>
                                <th>Job ID</th>
                                <th>Freelancer Name</th>
                                <th>Amount</th>
                                <th>Delivery Days</th>
                                <th>Status</th>
                                <th>Created At</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% acceptedBids.forEach(bid => { %>
                                <tr>
                                    <td><%= bid._id %></td>
                                    <td><%= bid.jobId %></td>
                                    <td><%= bid.freelancerName %></td>
                                    <td><%= bid.amount %></td>
                                    <td><%= bid.deliveryDays %></td>
                                    <td><span class="badge bg-success"><%= bid.status %></span></td>
                                    <td><%= bid.createdAt.toLocaleString() %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>

                    <!-- ================= REJECTED BIDS ================= -->
                    <h3 class="text-danger mt-5 mb-3">Rejected Bids</h3>
                    <table class="table table-bordered">
                        <thead class="thead-light">
                            <tr>
                                <th>Bid ID</th>
                                <th>Job ID</th>
                                <th>Freelancer Name</th>
                                <th>Amount</th>
                                <th>Delivery Days</th>
                                <th>Status</th>
                                <th>Created At</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% rejectedBids.forEach(bid => { %>
                                <tr>
                                    <td><%= bid._id %></td>
                                    <td><%= bid.jobId %></td>
                                    <td><%= bid.freelancerName %></td>
                                    <td><%= bid.amount %></td>
                                    <td><%= bid.deliveryDays %></td>
                                    <td><span class="badge bg-danger"><%= bid.status %></span></td>
                                    <td><%= bid.createdAt.toLocaleString() %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>

                </div>
                <!-- End of Page Content -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <%- include('./layouts/footer') %>
        </div>
    </div>

</body>
</html>
