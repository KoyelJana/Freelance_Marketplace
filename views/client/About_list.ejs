<!DOCTYPE html>
<html lang="en">

<%- include('./layouts/header') %>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include('./layouts/sidebar') %>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <%- include('./layouts/topbar') %>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                            <div class="container-fluid mb-4">

                                <!-- Page Heading -->
                                <h1 class="h3 mb-4 text-gray-800">All About</h1>
                                <a href="/client/about/add" class="btn btn-primary">Add About</a>

                            </div>

                            <div class="container-fluid mt-4">
                                <div class="row">
    <% abouts.forEach(about => { %>
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
          <% if(about.image) { %>
            <img src="<%= about.image %>" class="card-img-top" alt="<%= about.infoTitle %>" style="height:200px; object-fit:cover;">
          <% } %>
          <div class="card-body">
            <h5 class="card-title"><%= about.title %></h5>
            <% if(about.content){ %>
              <p class="card-text"><%= about.content.substring(0,100) %>...</p>
            <% } %>
          </div>
          <div class="card-footer d-flex justify-content-between">
            <a href="/client/about/edit/<%= about._id %>" class="btn btn-sm btn-warning">Edit</a>
            <form action="/client/about/delete/<%= about._id %>" method="POST" style="display:inline-block;">
              <button type="submit" class="btn btn-sm btn-danger">Delete</button>
            </form>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
                            </div>

                            <!-- End of Page Content -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <%- include('./layouts/footer') %>

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->


</body>

</html>
