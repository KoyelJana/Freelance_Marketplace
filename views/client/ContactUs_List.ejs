<!DOCTYPE html>
<html lang="en">

<%- include('./layouts/header') %>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include('./layouts/sidebar') %>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <%- include('./layouts/topbar') %>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                            <div class="container-fluid mb-4">

                                <!-- Page Heading -->
                                <h1 class="h3 mb-4 text-gray-800">Contact Us</h1>

                            </div>

                            <div class="container-fluid mt-4">
                                <!-- DataTales Example -->
                                <table class="table table-bordered">
                                    <thead class="thead-light">
                                        <tr>
                                            <th>#</th>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Message</th>
                                            <th>Date</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% contacts.forEach((c, index)=> { %>
                                            <tr>
                                                <td>
                                                    <%= index + 1 %>
                                                </td>
                                                <td>
                                                    <%= c.name %>
                                                </td>
                                                <td>
                                                    <%= c.email %>
                                                </td>
                                                <td>
                                                    <%= c.message %>
                                                </td>
                                                <td>
                                                    <%= c.createdAt.toLocaleString() %>
                                                </td>
                                                <td>
                                                    <a href="/client/contact/delete/<%= c._id %>"
                                                        class="btn btn-sm btn-danger"
                                                        onclick="return confirm('Are you sure to delete this message?')">
                                                        Delete
                                                    </a>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                            </div>
                            <!-- End of Page Content -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <%- include('./layouts/footer') %>
        </div>
    </div>

</body>
</html>
