<!doctype html>
<html lang="en">

<%-include('./layouts/header')%>

<body>
    <%-include('./layouts/navber')%>

    <!-- Banner -->
    <div class="container-fluid gtco-banner-area">
        <div class="container">
            <div class="row">
                <!-- Left text -->
                <div class="col-md-6">
                    <h1>Verify Your <span>Email</span></h1>
                    <p>We’ve sent a 4-digit verification code to your email. Please enter it below to verify your account.</p>
                    <!-- <a href="/verify_otp">Didn’t get the code? <i class="fa fa-refresh" aria-hidden="true"></i> Resend</a> -->
                </div>

                <!-- Right form -->
                <div class="col-md-6">
                    <div class="card p-4 shadow">
                        <% if (message && message.length > 0) { %>
                            <div class="alert alert-danger"><%= message %></div>
                        <% } %>

                        <form action="/verify_otp/create" method="POST">
                            <div class="form-group">
                                <label for="email">Email Address</label>
                                <input type="email" class="form-control" name="email" id="email" placeholder="Enter email">
                            </div>
                            <div class="form-group">
                                <label for="otp">Enter OTP</label>
                                <input type="text" class="form-control" name="otp" id="otp" placeholder="4-digit code">
                            </div>
                            <button type="submit" class="btn btn-success btn-block" style="background-color: brown">Verify</button>
                        </form>
                        <hr>
                        <!-- <p class="text-muted text-center">Didn’t receive the code? <a href="/verify_otp">Resend OTP</a></p> -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%-include('./layouts/footer')%>
</body>

</html>
