<!doctype html>
<html lang="en">

<%- include('./layouts/header') %>

<body>
    <%- include('./layouts/navber') %>

    <!-- Banner -->
    <div class="container-fluid gtco-banner-area" style="margin-top: 100px; margin-bottom: -50px;">
        <div class="container">
            <div class="row">
                <!-- Left Side -->
                <div class="col-md-6">
                    <h1> Forgot Your <span>Password?</span> </h1>
                    <p>
                        No worries! Enter your registered email and weâ€™ll send you a link
                        to reset your password securely.
                    </p>
                    <a href="/login">Back to Login <i class="fa fa-angle-right" aria-hidden="true"></i></a>
                </div>

                <!-- Right Side (Form) -->
                <div class="col-md-6">
                    <div class="card p-4 shadow">
                        <% if (message && message.length > 0) { %>
                            <div class="alert alert-danger"><%= message %></div>
                        <% } %>

                        <form action="/forgot_password_link/create" method="POST">
                            <div class="form-group">
                                <label for="email">Email Address</label>
                                <input type="email" class="form-control" name="email" id="email"
                                       placeholder="Enter your registered email" required>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block mt-3" style="background-color: brown; border: brown;">
                                Send Reset Link
                            </button>
                        </form>

                        <hr>
                        <div class="change_button text-center mb-4">
                            <a class="small" href="/register">Create an Account!</a>
                        </div>
                        <div class="change_button text-center">
                            <a class="small" href="/login">Already have an account? Login!</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('./layouts/footer') %>
</body>

</html>
