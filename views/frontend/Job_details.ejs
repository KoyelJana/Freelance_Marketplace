<html lang="en">

<%-include('./layouts/header')%>

    <body>
        <%-include('./layouts/navber')%>
            <div class="container my-5">
        <!-- Job Info Card -->
        <div class="card shadow-sm mb-4">
            <% if (job.image) { %>
                <img src="<%= job.image %>" alt="<%= job.title %>"
                     class="card-img-top" style="max-height: 300px; object-fit: contain;">
            <% } %>

            <div class="card-body">
                <h2 class="card-title"><%= job.title %></h2>
                <p class="text-muted">
                    <strong>Budget:</strong> $<%= job.budget %> | 
                    <strong>Status:</strong> <%= job.status || "Open" %>
                </p>
                <p>
                    <strong>Skills Required:</strong> 
                    <%= job.skills?.join(", ") || "None" %>
                </p>
                <p><%= job.description %></p>
                <p class="text-end text-muted">
                    <small>Posted on: <%= job.createdAt.toDateString() %></small>
                </p>
            </div>
        </div>

        <!-- Bid Submission Form -->
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Submit Your Bid</h5>
            </div>
            <div class="card-body">
    <% if (message && message.length > 0) { %>
        <div class="alert alert-info"><%= message %></div>
    <% } %>

    <form action="/bids/submit/<%= job._id %>" method="POST">
        <!-- Proposal / Message to client -->
        <div class="mb-3">
            <label for="proposal" class="form-label">Message to Client (optional)</label>
            <textarea name="proposal" id="proposal" class="form-control" rows="4" placeholder="Write a message for the client. This will appear in the chat along with your bid."></textarea>
        </div>

        <!-- Bid Amount -->
        <div class="mb-3">
            <label for="amount" class="form-label">Bid Amount ($)</label>
            <input type="number" name="amount" id="amount" class="form-control" required placeholder="Enter your bid amount">
        </div>

        <!-- Delivery Days -->
        <div class="mb-3">
            <label for="deliveryDays" class="form-label">Delivery Time (in days)</label>
            <input type="number" name="deliveryDays" id="deliveryDays" class="form-control" required placeholder="Enter number of days to complete the job">
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-success">
            <i class="fa fa-paper-plane me-1"></i> Submit Bid
        </button>
    </form>
</div>

        </div>
    </div>
    <%-include('./layouts/footer')%>
    </body>

</html>